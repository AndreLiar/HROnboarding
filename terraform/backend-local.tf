# Local Backend Configuration (for development)
# This file uses local state storage instead of remote Azure storage
# Use this for initial development before setting up remote state

terraform {
  required_version = ">= 1.0"
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 3.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.1"
    }
  }
}